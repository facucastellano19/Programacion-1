    public static void main(String[] args) {

        //F001.- Realizar un programa que pida la entrada de un String que 
        // sea un color, y repetir la entrada cuatro veces, guardando lo ingresado en un objeto ArrayList. 
        //Luego mostrar en pantalla el contenido del ArrayList, iterando sobre el mismo 
        Scanner sc = new Scanner (System.in);
        ArrayList <String> lista1 = new ArrayList();
        for (int i = 0; i < 4; i++) {
            System.out.println("Ingresa un color");
            String color = sc.nextLine();
            lista1.add(color);
        }
        System.out.println("");        
        System.out.println("Los colores ingresados son: ");
        Iterator it = lista1.iterator();
        while(it.hasNext()){
            System.out.println(it.next());
        }

    }
}
